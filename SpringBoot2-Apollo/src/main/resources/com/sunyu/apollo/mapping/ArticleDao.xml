<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunyu.apollo.dao.ArticleDao">

    <!--保存数据selectKey若启用则添加成功后id会自动返回-->
	<insert id="save" parameterType="Article">
	<!-- <selectKey resultType="int" keyProperty="id" order="AFTER">-->
		<!--	SELECT LAST_INSERT_ID()-->
	<!--	 </selectKey>-->
		insert into t_article(
			title,
			category
		) values (
			#{title},
			#{category}
		)
	</insert>
	<!--批量插入数据-->
	<insert id="batchSave" parameterType="java.util.List">
        insert into t_article(
			title,
			category
		) values
        <foreach collection="list" item="item" index="index" separator=",">
            (
			#{item.title},
			#{item.category}
            )
        </foreach>
	</insert>

    <!--更新数据-->
    <update id="update" parameterType="Article">
    	update t_article
		<trim prefix="set" suffixOverrides=",">
			<if test="title!=null">title = #{title},</if>
			<if test="category!=null">category = #{category},</if>
		</trim>
    	where id = #{id}
    </update>

    <!--删除数据-->
	<delete id="delete" parameterType="int">
		delete from t_article where id = #{id}
	</delete>

    <!--根据id返回一条记录-->
	<select id="queryById" parameterType="int" resultType="Article">
	    select 
			article_id,
			title,
			category
 		from t_article
		where id=#{id}
	</select>

	<!--分页记录-->
    <select id="queryPage" resultType="Article">
        select 
			article_id,
			title,
			category
 		from t_article
    </select>
</mapper>